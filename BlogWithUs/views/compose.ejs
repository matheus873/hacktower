<%- include("partials/header")-%>

<h1>Compose</h1>
<form action="/compose" method="post">
  <label for="title">Title</label><br>
  <input class="form-control round-borders" id="title" type="text" name="blogTitle" autocomplete="off"><br>
  <label for="post">Post</label><br>
  <textarea class="form-controls round-borders" rows="8" cols="108" id="post" type="text" name="blogPost" autocomplete="off"></textarea><br>
  <button class="btn btn-primary" type="submit" name="publish">Publish</button>

</form>

